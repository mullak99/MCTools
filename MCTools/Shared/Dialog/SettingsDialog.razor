@using Blazored.LocalStorage
@using MCTools.Components
@inherits LayoutComponentBase

@inject ILocalStorageService localStore
@inject NavigationManager navManager

<MudDialog>
	<DialogContent>
		<MudGrid Spacing="3" Justify="Justify.SpaceEvenly">
			<MudList T="object">
				<ToggleSwitch @bind-Checked="ExpandedVersionSelector"
				              Label="Show more versions"
				              TooltipText="Show more versions in the version selector" />
			</MudList>
			<MudList T="object">
				<ToggleSwitch @bind-Checked="DebugMode"
				              Label="Debug Mode"
				              TooltipText="Toggle debug/developer features"
				              IsDisabled="@MainLayout.IsDebugBuild()" />

			</MudList>
		</MudGrid>
	</DialogContent>
	<DialogActions>
		<MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
		<MudButton Color="Color.Primary" OnClick="Apply">Apply</MudButton>
		<MudText Typo="Typo.caption" Class="settings-version">@($"MCTools {Program.GetVersion(true)}")</MudText>
	</DialogActions>
</MudDialog>
